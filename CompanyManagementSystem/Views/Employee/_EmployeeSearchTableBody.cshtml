@model IEnumerable<EmployeeViewModel>

<div id="employeeTableContainer">
    <table class="table table-striped table-hover" id="employee-table">
        <thead class="thead-dark">
            <tr>
                
                <th>@Html.DisplayNameFor(model => model.ImageFile)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Age)</th>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <th>@Html.DisplayNameFor(model => model.Salary)</th>
                <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th> 
                <th>@Html.DisplayNameFor(model => model.HireDate)</th>
                <th>@Html.DisplayNameFor(model => model.Department.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="employee-table-body">
            @foreach (var employee in Model)
            {
                <tr>

                    <td><img src="~/Files/Images/@employee.ImagePath" class="rounded" height="40" width="40" alt="Employee Image" /></td>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@employee.Address</td>
                    <td>@employee.Salary</td>
                    <td>
                        @if (employee.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>@employee.Email</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.HireDate.ToString("yyyy-MM-dd")</td>
                    <td>@(employee.Department != null ? employee.Department.Name : "N/A")</td>
                    <td>
                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id">Details</a> |
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">Edit</a> |
                        <button type="button" onclick="showDeleteConfirmation(@employee.Id)" class="btn btn-link text-danger p-0">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
