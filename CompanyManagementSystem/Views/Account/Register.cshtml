@model RegisterViewModel
@{
	ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div class="agileits-top">

		<div asp-validation-summary="All"></div>

		<form asp-action="Register" method="post">

			<input class="text" asp-for="FName" placeholder="Your First Name" required="">
			<span asp-validation-for="FName" class="text-danger"></span>

			<br />

			<input class="text" asp-for="LName" placeholder="Your Last Name" required="">
			<span asp-validation-for="LName" class="text-danger"></span>

			<br />

			<input class="text email" asp-for="Email" placeholder="Your Email" required="">
			<span asp-validation-for="Email" class="text-danger"></span>

			<br />

			<input class="text" type="password" asp-for="Password" placeholder="Your Password" required="">
			<span asp-validation-for="Password" class="text-danger"></span>

			<br />

			<input class="text w3lpass" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>

			<br />


			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>

			<input type="submit" value="SIGNUP">

		</form>



		<p>Do You Have An Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>
@section ValidationScriptsSection {
	<partial name="_ValidationScriptsPartial" />
}