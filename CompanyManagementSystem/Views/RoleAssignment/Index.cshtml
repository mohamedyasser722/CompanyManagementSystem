@model IEnumerable<UserRoleViewModel>

<h2>Assign Roles</h2>
<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a href="@Url.Action("Assign", "RoleAssignment", new { userId = user.UserId })">Assign Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>
