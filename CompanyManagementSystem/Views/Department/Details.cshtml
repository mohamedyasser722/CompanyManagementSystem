@model CompanyManagementSystem.DAL.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Code:</dt>
        <dd class="col-sm-10">@Model.Code</dd>

        <dt class="col-sm-2">Date of Creation:</dt>
        <dd class="col-sm-10">@Model.DateOfCreation.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-controller="Department" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <form asp-controller="Department" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this department?');">Delete</button>
    </form>
</div>
